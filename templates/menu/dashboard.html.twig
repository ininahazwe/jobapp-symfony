{% extends 'base.html.twig' %}

{% block javascripts %}

{% endblock %}

{% block title %}Dashboard | {{ app.user.fullname|capitalize }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-sm-3">
            <div class="card border-light mb-3">
                <a href=""></a>
                <div class="card-header">Mon profil</div>
                <div class="card-body">
                    <h5 class="card-title">données personnelles</h5>
                    <p class="card-text">Remplir et mettre à jour ses données personnelles</p>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card border-light mb-3">
                <div class="card-header">Mes offres</div>
                <div class="card-body">
                    <h5 class="card-title">Catalogue</h5>
                    <p class="card-text">Mettre en ligne et gérer ses offres</p>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card border-light mb-3">
                <div class="card-header">Candidatures</div>
                <div class="card-body">
                    <h5 class="card-title">Light card title</h5>
                    <p class="card-text">Suivi des candidatures reçues</p>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card border-light mb-3">
                <div class="card-header">CVthèque</div>
                <div class="card-body">
                    <h5 class="card-title">Répertoire</h5>
                    <p class="card-text"> consulter les cv disponibles pour trouver ici le bon candidat</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}