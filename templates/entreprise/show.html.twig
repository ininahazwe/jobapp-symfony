{% extends 'base.html.twig' %}

{% block title %}Entreprise{% endblock %}

{% block body %}
    <h1>Entreprise</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ entreprise.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entreprise.description }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>
                    {% if entreprise.logo %}
                        {% for file in entreprise.logo %}
                            <img class="card-img-top" style="width:300px" src="{{ asset('uploads/' ~ file.name) }}">
                        {% endfor %}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ entreprise.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ entreprise.city }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ entreprise.zipcode }}</td>
            </tr>
            <tr>
                <th>Secteur</th>
                <td>{{ entreprise.secteur }}</td>
            </tr>
        </tbody>
    </table>
    <h2>Les offres</h2>
    {% for offre in entreprise.Offres %}
        <a href="{{ path('offre_show', {'id':offre.id}) }}" class="btn btn-primary px-4 ms-3">{{ offre.formule }}</a>
    {% endfor %}


    <div>
        <a href="{{ path('entreprise_index') }}">back to list</a>
        {% if is_granted('entreprise_edit', entreprise) %}
        <a href="{{ path('entreprise_edit', {'id': entreprise.id}) }}">edit</a>

        {{ include('entreprise/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
