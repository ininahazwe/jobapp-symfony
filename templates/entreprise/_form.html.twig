{{ form_start(form) }}
    {{ form_widget(form) }}
    {# Si la route est "annonces_edit on affiche les images #}
	{% if app.request.attributes.get('_route') == 'entreprise_edit' %}
        <h2>Logo</h2>
        {% for image in entreprise.logo %}
            <div>
                <img src="{{ asset('/uploads/'~image.name) }}" alt="" width="150">

                {# On ajoute un lien permettant de supprimer une image (sera géré en Ajax) #}
                <a href="{{ path('entreprise_delete_files', {id: image.id})}}" data-delete data-token="{{ csrf_token('delete' ~ image.id )}}">Supprimer</a>
            </div>
        {% endfor %}
    {% endif %}
<button class="btn btn-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
