{% extends 'base.html.twig' %}

{% block title %}Entreprise index{% endblock %}

{% block body %}
    <h1>Entreprise index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Logo</th>
                <th>Address</th>
                <th>City</th>
                <th>Zipcode</th>
                <th>Secteur</th>
                 <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td>{{ entreprise.name }}</td>
                <td>{{ entreprise.description }}</td>
                <td>
                    {% if entreprise.logo %}
                        {% for file in entreprise.logo %}
                            <img class="card-img-top" style="width:100px" src="{{ asset('uploads/' ~ file.name) }}">
                        {% endfor %}
                    {% endif %}
                </td>
                <td>{{ entreprise.address }}</td>
                <td>{{ entreprise.city }}</td>
                <td>{{ entreprise.zipcode }}</td>
                <td>{{ entreprise.secteur }}</td>
                <td>
                    <a href="{{ path('entreprise_show', {slug: entreprise.slug})}}">show</a>
                    <a href="{{ path('entreprise_edit', {'id': entreprise.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('entreprise_new') }}">Create new</a>
{% endblock %}
